@model EmpresaDistribuidora.Models.Producto

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Eliminar Producto</h4>

            </div>

            <div class="panel-body">
                <div class="alert alert-danger">
                    ¿Quiere eliminar el producto: @Html.DisplayTextFor(m => m.NombreProducto) ?
               </div>

                <form asp-action="Eliminar" method="post">
                    <input type="hidden" class="form-control" asp-for="ProductoId" placeholder="ProductoId" value="@Html.DisplayTextFor(m => m.ProductoId)" />

                    <Button type="submit" asp-action="Eliminar" class="btn btn-danger">Eliminar Producto</Button>
                    <a asp-action="Inicio" class="btn btn-warning">Volver</a>

               </form>

            </div>


        </div>

    </div>
</div>
